		// "paths": {
		// 	"@/*": ["src/*"],
		// 	"@assets/*": ["src/components/assets/*"],
		// 	"@atoms/*": ["src/components/atoms/*"],
		// 	"@molecules/*": ["src/components/molecules/*"],
		// 	"@organisms/*": ["src/components/organisms/*"],
		// 	"@pages/*": ["src/components/pages/*"],
		// 	"@hooks/*": ["src/hooks/*"],
		// 	"@redux/*": ["src/redux/*"],
		// },
	},
	"include": [
		"src",
		"craco.config.js"
	],
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	  ]
}
